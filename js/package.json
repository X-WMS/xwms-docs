{
  "name": "xwms-package",
  "version": "1.0.0",
  "description": "XWMS JavaScript / Node.js SDK",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist", "README.md", "LICENSE"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/X-WMS/xwms-docs.git",
    "directory": "js"
  },
  "bugs": {
    "url": "https://github.com/X-WMS/xwms-docs/issues"
  },
  "homepage": "https://github.com/X-WMS/xwms-docs#readme",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --watch --format esm,cjs --dts",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "@types/node": "^22.2.0"
  }
}
